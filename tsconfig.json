{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/*": [
				"./resources/*"
			]
		}
	},
	"include": [
		"resources/**/*.ts",
		"resources/**/*.tsx",
		"resources/**/*.vue",
		"auto-imports.d.ts",
		"components.d.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}